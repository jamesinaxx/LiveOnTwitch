{
  "name": "nowlive",
  "displayName": "Now Live",
  "version": "1.0.0",
  "private": true,
  "description": "Instantly check which of your favorite Twitch streamers are live right from your favorite browser",
  "repository": "https://github.com/jewlexx/NowLive",
  "license": "MIT",
  "author": "jewlexx",
  "scripts": {
    "build": "rimraf dist && cross-env PRODUCTION=true parcel build manifest.json --config @parcel/config-webextension",
    "dev": "parcel watch manifest.json --config @parcel/config-webextension",
    "fmt": "prettier --write ./src/*/**.{ts,tsx} --ignore-path .gitignore",
    "fmt:check": "prettier --check ./src/*/**.{ts,tsx} --ignore-path .gitignore",
    "icons": "node scripts/icons.js",
    "lint": "eslint ./src/*/**.{ts,tsx} --ignore-path .gitignore",
    "lint:fix": "eslint ./src/*/**.{ts,tsx} --ignore-path .gitignore --fix",
    "start:firefox": "web-ext run --source-dir ./dist/"
  },
  "dependencies": {
    "fast-average-color": "9.1.1",
    "framer-motion": "6.3.15",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "4.4.0",
    "react-is": "18.2.0",
    "styled-components": "5.3.5",
    "tslib": "2.4.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "2.6.2",
    "@types/chrome": "0.0.191",
    "@types/node": "18.0.0",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.11",
    "@types/styled-components": "5.1.25",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "browserslist": "4.21.0",
    "cross-env": "7.0.3",
    "eslint": "8.18.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "install-peers": "1.0.4",
    "parcel": "2.6.2",
    "prettier": "2.7.1",
    "process": "0.11.10",
    "rimraf": "3.0.2",
    "sharp": "0.30.7",
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@3.2.0"
}
